<form>
  <field>
    <id>resolver.description</id>
    <label>Description</label>
    <type>text</type>
    <help>A short description for your reference.</help>
  </field>
  <field>
    <id>resolver.address</id>
    <label>Address(es)</label>
    <allownew>true</allownew>
    <style>tokenize</style>
    <type>select_multiple</type>
    <help>Enter a list of IP addresses and ports (optional). Uses port 53 if omitted. Like "8.8.8.8, [2001:4860:4860::8888], 8.8.8.8:5353"</help>
  </field>
  <field>
    <id>resolver.ipv4_off</id>
    <label>IPv4 OFF</label>
    <type>checkbox</type>
    <help>Dont request ipv4 address.</help>
    <advanced>true</advanced>
  </field>
  <field>
    <id>resolver.ipv6_off</id>
    <label>IPv6 OFF</label>
    <type>checkbox</type>
    <help>Dont request ipv6 address.</help>
    <advanced>true</advanced>
  </field>
  <field>
    <id>resolver.valid</id>
    <label>Validity Time</label>
    <type>text</type>
    <help>Override response TTL.</help>
    <advanced>true</advanced>
  </field>
  <field>
    <id>resolver.timeout</id>
    <label>Time-Out</label>
    <type>text</type>
    <help>Resolver Time-Out. 30 sec if empty.</help>
    <advanced>true</advanced>
  </field>
</form>
